<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit Product Form View -->
    <record id="view_product_product_form_inherit_pod" model="ir.ui.view">
        <field name="name">product.product.form.inherit.pod</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_view_pod_mappings" 
                    type="object" 
                    class="oe_stat_button" 
                    icon="fa-link"
                    invisible="pod_mapping_count == 0">
                    <field name="pod_mapping_count" widget="statinfo" string="POD Mappings"/>
                </button>
            </xpath>
            <xpath expr="//notebook" position="inside">
                <page string="POD Mappings" name="pod_mappings">
                    <field name="pod_mapping_ids" mode="tree">
                        <tree string="POD Mappings">
                            <field name="provider_id"/>
                            <field name="pod_product_id"/>
                            <field name="pod_variant_id"/>
                            <field name="last_sync"/>
                            <field name="active"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>

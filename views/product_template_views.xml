<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit Product Template Form View -->
    <record id="view_product_template_form_inherit_pod" model="ir.ui.view">
        <field name="name">product.template.form.inherit.pod</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_view_pod_mappings" 
                    type="object" 
                    class="oe_stat_button" 
                    icon="fa-link"
                    invisible="pod_mapping_count == 0">
                    <field name="pod_mapping_count" widget="statinfo" string="POD Mappings"/>
                </button>
            </xpath>
        </field>
    </record>
</odoo>

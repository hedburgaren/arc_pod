<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- POD Catalog Wizard Form View -->
    <record id="view_pod_catalog_wizard_form" model="ir.ui.view">
        <field name="name">pod.catalog.wizard.form</field>
        <field name="model">pod.catalog.wizard</field>
        <field name="arch" type="xml">
            <form string="Add POD Product Mapping">
                <group>
                    <group>
                        <field name="odoo_product_id" readonly="1"/>
                        <field name="provider_id" options="{'no_create': True}"/>
                    </group>
                    <group>
                        <field name="catalog_loaded" invisible="1"/>
                    </group>
                </group>
                <group>
                    <button name="action_fetch_catalog" 
                            string="Fetch Products" 
                            type="object" 
                            class="btn-primary"
                            icon="fa-refresh"/>
                </group>
                <notebook invisible="not catalog_loaded">
                    <page string="Available Products">
                        <field name="catalog_ids" nolabel="1">
                            <tree string="Products" 
                                  create="false" 
                                  edit="false" 
                                  delete="false">
                                <field name="product_id" readonly="1"/>
                                <field name="name" readonly="1"/>
                                <field name="sku" readonly="1"/>
                                <field name="description" readonly="1"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
                <group invisible="not catalog_loaded">
                    <field name="selected_catalog_id" 
                           domain="[('wizard_id', '=', id)]"
                           options="{'no_create': True}"/>
                </group>
                <footer>
                    <button name="action_create_mapping" 
                            string="Create Mapping" 
                            type="object" 
                            class="btn-primary"
                            invisible="not selected_catalog_id"/>
                    <button string="Cancel" 
                            class="btn-secondary" 
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action to open POD Catalog Wizard -->
    <record id="action_pod_catalog_wizard" model="ir.actions.act_window">
        <field name="name">Add POD Product Mapping</field>
        <field name="res_model">pod.catalog.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="product.model_product_template"/>
    </record>
</odoo>
